---
title: news.title
layout: article
---
<% content_for(:og_title, news.title) %>
<% content_for(:og_url, "https://blackdog-consultants.com/news/" + news.slug) %>
<% content_for(:og_description, news.metadescription) %>
<% content_for(:og_image, "https:" + news.coverImage.url) %>
<%= partial '/partials/logo_heading' %>
<div class="row background-white">
  <div class='text-heavy'>
    <div class="col-md-4 cover-image">
      <%= image_tag(news.coverImage.url) %>
    </div>
    <div class="col-md-8 content text-secondary">
      <h1 class="title"><%= news.title %></h1>
      <div class="description">
        <%= Tilt['markdown'].new { news.body }.render %>
        <div class="back">
          <a class="btn btn-dark-outline link" href="/news-archives">
            <i class="fa fa-chevron-left"></i>
            View our full archives
          </a>
        </div>
      </div>
    </div>
  </div>
</div>