<div class="row background-secondary" id="latestNews">
  <div class="divider">
    <div class="col-md-5 col-md-offset-1 left-column">
      <div class="col-sm-6 col-md-8 logo-container">
        <%= image_tag 'logo.png', :class => "logo" %>
      </div>
      <div class="col-sm-11 subheading">
        <h1 class="text-light">Latest News</h1>
      </div>
    </div>
    <div class="col-md-6 hidden-sm-down image-container">
      <%= image_tag 'main.jpg' %>
    </div>
  </div>
</div>
<div class="row articles background-white">
  <% news_array = data.articles.news.to_a.sort_by{ |id, e| e['date'] } %>
  <% news_array.reverse.each do |news| %>
  <% n = news[1] %>
    <div class="col-xs-12 col-lg-offset-1 col-lg-10 post">
      <div class=" col-md-4 featured-image">
        <%= image_tag(n.coverImage.url) %>
      </div>
      <div class="col-md-8 summary">
        <h1 class="text-primary"><%= n.title %></h1>
        <small>posted on: <%= n.date.strftime('%d %b %Y') %></small><br>
        <%= n.metadescription %><a class="btn btn-light-outline link" href="news/<%= n.slug%>">Read more here</a>
      </div>
    </div>
    <div class="col-xs-12 col-lg-offset-1 col-lg-10 post">
      <a class="btn btn-light-outline link" href="#">View our full archives</a>
    </div>
  <% end %>
</div>