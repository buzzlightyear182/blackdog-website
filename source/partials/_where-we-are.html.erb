<div class="row background-primary" id="whereWeAre">
  <div class="divider">
    <div class="col-md-5 col-md-offset-1 left-column">
      <div class="col-sm-6 col-md-8 logo-container">
        <%= image_tag 'logo.png', :class => "logo" %>
      </div>
      <div class="col-sm-11 subheading wow bounce">
        <h1 class="text-light">Where We Are Across Asia Pacific</h1>
      </div>
    </div>
    <div class="col-md-6 hidden-sm-down image-container">
      <%= image_tag 'where-we-are-4x3.jpg' %>
    </div>
  </div>
</div>
<div class="row where-we-are background-dark" id="map">
  <div class="cities-container">
    <ul class="cities list-reset">
      <li class="manila" data-toggle="tooltip" data-placement="top" title="Manila, Philippines">
        <svg class="shape shape-pawprint">
          <use xlink:href="#shape-pawprint"></use>
        </svg>
      </li>
    </ul>
    <div class="icons-container col-md-2 hidden-sm-down">
      <%= image_tag 'beijing.png', class: 'manila-icon city-img animated hidden' %>
    </div>
  </div>
</div>
<div class="row where-we-are background-dark icons hidden-md-up">
  <ul class="city-icons">
    <% 18.times do %>
      <li class="city-icon-container col-xs-6 col-sm-4 col-md-2"><%= image_tag 'beijing.png'%></li>
    <% end %>
  </ul>
</div>